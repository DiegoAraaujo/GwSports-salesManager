generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Tipo_pagamento{
  DINHEIRO
  PIX 
  CARTAO
  PENDENTE
}

enum Status_pagamento{
  PAGO 
  PENDENTE
}

model Usuario{
  id Int @id @default(autoincrement())
  email String @unique
  nome String
  senha String

}

model Produto{
  id Int @id @default(autoincrement())
  nome String
  categoria String
  tamanho String
  marca String
  preco_original Float
  preco_revenda Float
  quantidade Int

  vendas Vendas[]
}

model Vendas{
  id Int @id @default(autoincrement())
  nome_cliente String
  telefone String
  endereco String
  tipo_pagamento Tipo_pagamento
  status_pagamento Status_pagamento
  valor_venda Float
  data_venda DateTime @default(now())
  data_pagamento String
  produtoId Int
  
  produto Produto @relation(fields: [produtoId], references: [id])
}

model Caixa {
  id Int @id @default(autoincrement())
  quantidade_vendas Int
  pagamentos_pendentes Int
  saldo Float
 
}

